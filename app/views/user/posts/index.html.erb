
<h2>投稿一覧</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>写真</th>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to user_path(post.user_id) do %>
          <%= image_tag post.get_image, width: 150, height: 150 %>
          <% end %>
          </td>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>